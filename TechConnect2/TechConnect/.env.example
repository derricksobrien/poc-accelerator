# Environment Variables Template
# Copy to .env and customize for your environment

# API Configuration
PORT=8000
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Optional: LLM Integration (for future production use)
# OPENAI_API_KEY=sk-...
# AZURE_OPENAI_API_KEY=...
# AZURE_OPENAI_ENDPOINT=https://....openai.azure.com/

# Optional: GitHub Integration (for repo crawling)
# GITHUB_TOKEN=ghp_...
# GITHUB_USERNAME=your-username

# Optional: Azure Configuration (for production deployment)
# AZURE_SUBSCRIPTION_ID=...
# AZURE_RESOURCE_GROUP=techconnect-rg
# AZURE_STORAGE_ACCOUNT=...

# Optional: Logging & Monitoring
# LOG_LEVEL=INFO
# SENTRY_DSN=...

# Docker & Compose
COMPOSE_PROJECT_NAME=techconnect
COMPOSE_FILE=docker-compose.yml

# Development only
DEBUG=False  # Set to True for development, False for production
