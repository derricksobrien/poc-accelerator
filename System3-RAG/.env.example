# Azure AI Foundry Configuration
AI_FOUNDRY_ENDPOINT=https://your-aifoundry.openai.azure.com/
AI_FOUNDRY_KEY=your-api-key
AI_FOUNDRY_AGENT_ID=your-agent-id
AI_FOUNDRY_MODEL=gpt-4o

# Azure Credentials (for Managed Identity authentication)
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Azure AI Search (for catalog indexing)
SEARCH_ENDPOINT=https://your-search.search.windows.net/
SEARCH_KEY=your-search-key
SEARCH_INDEX=solutions-catalog

# Application Configuration
ENV=production
PORT=8000
HOST=0.0.0.0
SESSION_TIMEOUT_MINUTES=60

# Logging
LOG_LEVEL=INFO
